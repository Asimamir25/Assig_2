<!doctype html>
<html lang="en">
  <head>
    <title>The Sweat Zone</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/707861f521.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  
  </head>
  <body>

    <!-- Embedding navbar from partials folder -->
    <%-include("../Partials/NavBar"); %>
      <div class="container">
        <form action="/task/edit/<%=task._id%>" method="post">
          <div class="mb-3">
              <label for="TaskTitle" class="form-label">Name</label>
              <input type="text" class="form-control" name="TaskTitle" value="<%=task.TaskTitle%>"/>
          </div>
          <div class="mb-3">
              <label for="TaskDesc" class="form-label">Price</label>
              <input type="text" class="form-control" name="TaskDesc" value="<%=task.TaskDesc%>"/>
          </div>
          <div class="mb-3">
              <label for="DueData" class="form-label">Servings</label>
              <input type="text" class="form-control" name="DueData" value="<%=task.DueData%>"/>
          </div>
          <div class="mb-3">
              <label for="DueTime" class="form-label">Discount</label>
              <input type="text" class="form-control" name="DueTime" value="<%=task.DueTime%>"/>
          </div>
          <div class="mb-3">
              <label for="Status" class="form-label">Discount</label>
              <input type="text" class="form-control" name="Status" value="<%=task.Status%>"/>
          </div>
          <div class="mb-3">
              <button class="btn btn-info" type="submit">Edit Task</button>
          </div>
      </form>
      </div>
  </body>
</html>